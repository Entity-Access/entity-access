{
    "compilerOptions": {
        "target": "ES2021",
        "module":"NodeNext",
        "incremental": true,
        "sourceMap": true,
        "declaration": true,
        "declarationMap": true,
        "importHelpers": true,
        "outDir": "dist",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "lib": [
            "ES2018",
            "ESNext.Disposable",
            "ES2021.WeakRef"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
		"node_modules",
		"tests"
    ]
}